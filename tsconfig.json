{
    "extends": "@tsconfig/docusaurus/tsconfig.json",
    "include": [
        "src/"
    ],
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "es6",
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "composite": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react"
    }
}
